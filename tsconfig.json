{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "custom",
      "jquery",
      "d3",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  // "include": [
  //   "node_modules/web-components/**/*"
  // ],
  "exclude": [
    "**/*.spec.ts",
    // "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
