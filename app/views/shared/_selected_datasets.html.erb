<div class='card'>
  <div class='card-title card-title-colored'>
    <h2 class='card-title-text'>Select datasets</h2>
  </div>
  <div class='card-supporting-text'>
    <table class='table'>
      <thead>
      <tr>
        <th><input type='checkbox' /></th>
        <th>Name</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody id='selected-items-body'>
      </tbody>
    </table>

    <div class='search-buttons-centered' id='search-button'>
      <%= button_tag(raw("<span class='glyphicon glyphicon-search grow'></span> Search"), :type => "submit", :class => "btn btn-primary btn-animate", :id =>"search_selected_datasets_button", :"data-loading-text" => "Loading...") %>
      <%= button_tag(raw("<span class='glyphicon glyphicon-remove-sign'></span> Remove all"), { :name => 'reset', :id => 'remove_all_datasets_button', :class => "btn btn-default btn-animate" }) %>
    </div>
  </div>
</div>

