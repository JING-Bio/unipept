<!DOCTYPE html>
<html>
<head>
  <title><%=title%></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<link rel="shortcut icon" href="/favicon.ico" />
	
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-22900446-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	
</head>
<body>
<div id='container'>
	<%= render 'layouts/topbar' %>
	<%= render 'layouts/header' %>
	<div id='breadcrumb' class='swapUnderline'>
		<span id='breadcrumbs-you-are-here'>You are here:</span> 
		<%= link_to("Home", root_path, :class => "br-act") %>
	</div>
	<div class='visualClear' id='clear-space-before-wrapper-table'>
		<!-- -->
	</div>
	<div id='main'>
		<%= render 'layouts/navigation' %>
		<div id='content' class='normal'>
			
			<% if Rails.env.development? %>
			<div id="spotlight" class="spotlight">
				<div class="sectiontitle"><h2>Development server</h2></div>
				<div class="columns">
				  <div class="column">
				    <div class="spacing-left">
			      	<p><span>This is the development version of UniPept. Please use the website at <a href="http://nibbler.ugent.be">nibbler.ugent.be</a> for more stable results.</span></p>	
					  </div>	
			    </div>
				</div>
			</div>
			<% end %>
			
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, :class => "flash #{key}") %>
			<% end %>
			
			<%= yield %>
			
			<%= debug(params) if Rails.env.development? %>
		</div>
	</div>
		<div class='visualClear'><!-- --></div>
		<div id="footerpush"> </div>
</div>
<div id='footer-wrap'>
	<%= render 'layouts/footer' %>
</div>	
</body>
</html>