<p>We matched <%= @number_found %> of the <%= pluralize(@number_searched_for, "peptide") %> of which <%= pluralize(@number_unique_found, "is", "are") %> unique to a single species.</p>
<% @species.each do |species| %>
	<h2><%= species %></h2>
	<ul>
	<% @matches[species].each do |row| %>
		<li><%= "#{row['sequence']}: #{row['genomes_with_sequence']}/#{row['number_of_genomes']}" %></li>
	<% end %>
	</ul>
<% end %>