<%=
  puts @result[:ec_mapping]

  if @extra_info
    Oj.dump(
      @result[:output].map do |k, v|
        {
          "peptide" => k,
          "ec" => v.sort_by { |_key, value| -value }.map do |k1, v1|
            {
              "proteins" => v1,
              "ec_number_code" => k1,
              "name" => @result[:ec_mapping][k1]
            }
          end
        }
      end
    ).html_safe
  else
    Oj.dump(
      @result[:output].map do |k, v|
        {
          "peptide" => k,
          "ec" => v.sort_by { |_key, value| -value }.map do |k1, v1|
            {
              "proteins" => v1,
              "ec_number_code" => k1
            }
          end
        }
      end
    ).html_safe
  end

%>
